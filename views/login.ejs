<%- include("./partials/navbar") %>

<div class="container login text-center">

    <!-- <h1 class="p_span login_title text-center new_title">Login</h1> -->

    <h4  class="login_head" id="please_login">Please login to see our Blog!</h4>


      <form action="/login" method="POST">
        <div class="form-group login">
          <label for="username">Username</label>
          <input class="form-control new_form" id="username" type="text" name="username" placeholder="">
        </div>
        <div class="form-group login">
          <label for="password">Password</label>
          <input class="form-control new_form" size="40" id="password" type="password" name="password" placeholder="">
        </div>
        <div>
            <button class="new_form btn btn-outline-light btn-lg card_btn login_reg">Login</button>
        </div>
    </form>

    <h4 id="not" class="login_head" >Not yet registered? </h4> 
    <a href="/register" id="login_reg" class="btn btn-outline-light btn-lg card_btn login_reg">Register</a>
 
</div>


