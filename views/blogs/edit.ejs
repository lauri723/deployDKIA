<%- include("../partials/headerBlog") %>
<%- include("../partials/scroll") %>
<%- include("../partials/navbarBlog") %>


<div class="container edit_blog">
    <div class="row">
        <h1 class="p_span text-center new_title">Edit:  <%= blog.title %> </h1>
        <div class="new_blog_group">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="">Title</label>
                    <input class="form-control new_form type=" text" name="blog[title]" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <label for="">Image</label>
                    <input class="form-control new_form" type="text" name="blog[image]" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                    <label for="">Blog Content</label>
                    <textarea class="new_form form-control" name="blog[body]" rows="20"><%= blog.body %></textarea>
                </div>
                <div class="form-group new_buttons">
                    <button class="btn btn-outline-light btn-lg card_btn new_buttons">Submit</button>
                    <a href="/blogs/<%= blog._id %>" class="btn btn-outline-light btn-lg card_btn new_buttons">Go Back</a>
                </div>
            </form>
            <form method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                <button class="btn btn-outline-light btn-lg card_btn cb_rev new_buttons" type="submit">Delete Blog</button>
            </form>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>