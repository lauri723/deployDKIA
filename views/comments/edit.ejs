<%- include("../partials/headerBlog") %>
<%- include("../partials/scroll") %>
<%- include("../partials/navbarBlog") %>


<div class="container edit_blog edit_comment">
    <div class="row">
        <h1 class="p_span new_title">Edit comment:  </h1>
        <div class="new_blog_group">
            <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="">Comment</label>
                    <textarea class="new_form form-control" name="comment[text]" rows="4"><%= comment.text %></textarea>
                </div>
                <div class="form-group new_buttons">
                    <button class="btn btn-outline-light btn-lg card_btn new_buttons">Submit</button>
                    <a href="/blogs/<%= blog_id %>" class="btn btn-outline-light btn-lg card_btn new_buttons">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
               

